			<lptsXML name="Streaming" validate="tbd" clean="nullify1"/>
			<lptsXML name="FCBHStore" validate="tbd" clean="nullify1"/>
			<lptsXML name="ItunesPodcast" validate="tbd" clean="nullify1"/>
