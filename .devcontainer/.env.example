# DBP ETL Development Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# USER CONFIGURATION (for file ownership preservation)
# ============================================================================
# Set these to match your host user ID and group ID to preserve file ownership
# Run `id -u` to get your user ID and `id -g` to get your group ID
# Defaults to 1000:1000 if not set
LOCAL_USER_ID=1000
LOCAL_GROUP_ID=1000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For local development with docker-compose MySQL
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_DB_NAME=dbp
DATABASE_USER=dbp_user
DATABASE_PASSWD=dbp_password
DATABASE_USER_DB_NAME=dbp_users

# MySQL root password (for docker-compose MySQL service)
MYSQL_ROOT_PASSWORD=root_password
MYSQL_PORT=3306

# For connecting to remote database (comment out above and use these)
# DATABASE_HOST=your-rds-endpoint.us-west-2.rds.amazonaws.com
# DATABASE_PORT=3306
# DATABASE_DB_NAME=dbp
# DATABASE_USER=your_db_user
# DATABASE_PASSWD=your_db_password

# ============================================================================
# AWS CREDENTIALS
# ============================================================================
# Option 1: Use AWS credentials from ~/.aws/credentials (recommended)
# Leave these blank to use mounted ~/.aws directory

# Option 2: Explicit credentials
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_SESSION_TOKEN=your_session_token  # Optional, for assumed roles
AWS_DEFAULT_REGION=us-west-2

# ============================================================================
# S3 BUCKET CONFIGURATION
# ============================================================================
S3_BUCKET=etl-development-input
S3_VID_BUCKET=dbp-vid-staging
S3_ARTIFACTS_BUCKET=dbp-etl-artifacts
S3_KEY_PREFIX=dev
UPLOAD_BUCKET=etl-development-input

# ============================================================================
# S3 ZIPPER SERVICE
# ============================================================================
S3_ZIPPER_USER_KEY=your_s3zipper_user_key
S3_ZIPPER_USER_SECRET=your_s3zipper_user_secret

# ============================================================================
# ECS TRANSCODER CONFIGURATION
# ============================================================================
TRANSCODER_ECS_DISABLED=false
TRANSCODER_ECS_CLUSTER_NAME=your-ecs-cluster-name
TRANSCODER_ECS_CONTAINER_NAME=your-ecs-container-name
TRANSCODER_ECS_PLACEMENT_SECURITY_GROUP=sg-xxxxxxxxxxxxxxxxx
TRANSCODER_ECS_PLACEMENT_SUBNET=subnet-xxxxxxxxxxxxxxxxx
TRANSCODER_ECS_TASK_DEFINITION=your-task-definition:1

# ============================================================================
# BIBLE BRAIN SERVICES
# ============================================================================
BIBLEBRAIN_SERVICES_BASE_URL=https://api.biblebrain.com

# ============================================================================
# AUDIO TRANSCODER
# ============================================================================
AUDIO_TRANSCODER_BASE_URL=https://your-audio-transcoder-api.com

# ============================================================================
# CDN CONFIGURATION
# ============================================================================
CDN_PARTNER_BASE=https://your-cdn-url.com

# ============================================================================
# MONDAY.COM INTEGRATION
# ============================================================================
MONDAY_COMPLETED_PRODUCT_CODE_API_KEY=your_monday_api_key
MONDAY_COMPLETED_PRODUCT_CODE_BOARD_ID=your_monday_board_id

# ============================================================================
# DATA MIGRATION SETTINGS
# ============================================================================
# Options: "B" (Legacy LPTS), "C" (Transitional), "BLIMP" (Modern)
DATA_MODEL_MIGRATION_STAGE=BLIMP

# ============================================================================
# LPTS CONFIGURATION
# ============================================================================
# Set to any value to enable LPTS upload mode
LPTS_UPLOAD=

# ============================================================================
# LOCAL DEVELOPMENT
# ============================================================================
# Path to local test data directory (optional)
LOCAL_TEST_DATA=./test_data
